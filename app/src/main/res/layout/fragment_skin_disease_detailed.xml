<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/wiki_detailed_diseaseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Disease Name"
            android:textColor="#BB86FC"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:padding="8dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imageCarousel"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/wiki_detailed_diseaseName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clipToPadding="false"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />

        <ImageView
            android:id="@+id/leftArrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_left_arrow"
            app:layout_constraintTop_toTopOf="@id/imageCarousel"
            app:layout_constraintBottom_toBottomOf="@id/imageCarousel"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/rightArrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintTop_toTopOf="@id/imageCarousel"
            app:layout_constraintBottom_toBottomOf="@id/imageCarousel"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/wiki_detailed_diseaseDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comprehensive description of the disease goes here."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:padding="8dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toBottomOf="@id/imageCarousel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/characteristicsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/wiki_detailed_diseaseDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Characteristics and Symptoms"
                android:textSize="18sp"
                android:textColor="#BB86FC"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Symptom 1"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Symptom 2"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Symptom 3"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/doctorsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialized Doctors"
            android:textSize="18sp"
            android:textColor="#BB86FC"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/characteristicsSection"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:id="@+id/doctorsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/doctorsText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/man"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/man"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="16dp"
               />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/man"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="16dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
